import socket

HOST = "0.0.0.0"
PORT = 5000

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.bind((HOST, PORT))
s.listen(1)

print("Venter p√• tilkobling fra Pi...")
conn, addr = s.accept()
print(f"Tilkoblet fra: {addr}")

while True:
    data = conn.recv(1024).decode()
    if not data:
        break
    print(f"Mottatt melding: {data}")

conn.close()
print("Forbindelsen ble avsluttet.")
