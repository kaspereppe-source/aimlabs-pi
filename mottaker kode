import socket
import win32api
import win32con
from pynput.keyboard import Controller, Key

keyboard = Controller()
UDP_IP = "0.0.0.0"
UDP_PORT = 5005
ds_prev = 0
sock = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
sock.bind((UDP_IP, UDP_PORT))

print("Venter")

while True:
    data, addr = sock.recvfrom(1024)
    msg = data.decode().strip()

    if msg == "PING":
        print("(PING mottatt)")
        continue

    try:
        cx, cy, ds = map(int, msg.split(','))
        win32api.mouse_event(win32con.MOUSEEVENTF_MOVE, cx, cy)
        print(f"Mottatt: {cx},{cy},{ds}")
        if ds == 1 and ds_prev == 0:
            keyboard.press(Key.space)
            keyboard.release(Key.space)
        ds_prev = ds
    except:
        print("Ugyldig datapakke")
