import socket
import pyautogui

UDP_IP = "0.0.0.0"
UDP_PORT = 5005

sock = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
sock.bind((UDP_IP, UDP_PORT))

screen_width, screen_height = pyautogui.size()
frame_width = 640
frame_height = 480

while True:
    data, addr = sock.recvfrom(1024)
    try:
        cx, cy = map(int, data.decode().split(','))
        screen_x = int(cx * screen_width / frame_width)
        screen_y = int(cy * screen_height / frame_height)
        pyautogui.moveTo(screen_x, screen_y)
    except:
        pass
